---
import Layout from '../layouts/Layout.astro';

// Verificar si hay usuario
const auth = Astro.locals.auth;
let userId = null;
if (auth) {
  const authResult = await auth();
  userId = authResult.userId;
}
if (!userId) {
  return Astro.redirect('/login');
}
