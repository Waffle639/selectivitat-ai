---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Iniciar Sesión - Selectivitat AI">
  <div class="min-h-screen bg-gray-50 flex flex-col">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <a href="/" class="text-2xl font-bold text-blue-600">
            Selectivitat AI
          </a>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1 flex items-center justify-center px-4 py-12">
      <div class="w-full max-w-md">
        <div class="text-center mb-8">
          <h1 class="text-3xl font-bold text-gray-900 mb-2">
            Bienvenido de nuevo
          </h1>
          <p class="text-gray-600">Inicia sesión para corregir tus exámenes</p>
        </div>

        <!-- Clerk Sign In Component -->
        <div id="clerk-signin"></div>

        <p class="text-center text-sm text-gray-600 mt-6">
          ¿Primera vez aquí?
          <a
            href="/registro"
            class="text-blue-600 hover:text-blue-700 font-medium"
          >
            Crea una cuenta
          </a>
        </p>
      </div>
    </main>
  </div>

  <!-- Clerk Script -->
  <script is:inline>
    const clerkPublishableKey = import.meta.env.PUBLIC_CLERK_PUBLISHABLE_KEY;

    if (clerkPublishableKey) {
      const script = document.createElement("script");
      script.src =
        "https://unpkg.com/@clerk/clerk-js@latest/dist/clerk.browser.js";
      script.onload = async () => {
        const clerk = window.Clerk;
        await clerk.load({
          publishableKey: clerkPublishableKey,
        });

        // Montar el componente de Sign In
        clerk.mountSignIn(document.getElementById("clerk-signin"), {
          afterSignInUrl: "/corregir",
          appearance: {
            elements: {
              rootBox: "w-full",
              card: "shadow-lg rounded-2xl",
            },
          },
        });
      };
      document.head.appendChild(script);
    }
  </script>
</Layout>
